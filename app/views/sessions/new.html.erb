<%= form_tag ({controller: 'sessions', action: 'create', method: 'post'}) do %>
  <div>
  Enter username: <input name=username placeholder="username">
  </div>
  <div>
  Enter password: <input type="password" name=password placeholder="password">
  </div>
  <div>
  <input class="btn btn-primary" type=submit value="login">
  <% end %>

 <%= link_to "Create a new user", new_user_path, class: "btn btn-primary" %>
</div>
