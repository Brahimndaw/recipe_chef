<%=  form_for(@recipe) do |f| %>

 <div class= "field"> <%= f.label :video_url, "Video" %> <br>
  <%= f.url_field :video_url %> </div>

   <div class="field"> <%= f.label :title, "Title"  %><br>
  <%= f.text_field  :title %></div>

  <div class="field"> <%= f.label :description, "Description" %> <br>
  <%= f.text_area :description %> </div>

  <%= fields_for :tags, @recipe.tags.build do |tag| %>
    <div class="field">
    <%= tag.label :tag %>
  <%= tag.text_field :name %>

  <div class='action'>
  <%= f.submit %>
  </div>

  <% end %>
  <% end %>
