<div class="col-md-9 content">
  <div class="page">
    <article>
      <div class="page-header page-header-resume">
       <h2><%= @user.username%></h2>
        <img src="<%= @user.image_url%>" alt="" title="" />
         <div class="row" align="center">
         <br>
         <% if current_user %>
        <%= link_to "Create a recipe", new_recipe_path, class: "btn btn-primary" %>
        <% end %>
     </div> <!-- end row -->
      </div><!-- end page-header -->

<div class="row" align ="center">
  <h3> Chef Rating : <%= rating_for @user, "skills",  disable_after_rate: false %>
</h3>
  <div class="row">
    <% if @user.recipes %>
    <h1></h1>
      <div class="page-header page-header-resume">
     
    
  </div>
   <h2>Recipes</h2>
</div>
  <% @user.recipes.each do |recipe| %>

    <div class="col-md-4" align="left">
  <%= link_to recipe.title, recipe_path(recipe) %> <%= rating_for recipe, "delizioso" %>
  <br>
  <p> Tags: <%= raw recipe.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>
  <br>

</div><!-- end col-md-4 -->
  <% end %>
  <% end %>  
</div><!-- end row -->
<div class="row" align="center">
<% if current_user %>
<%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-warning"%>
<% end %>
</div>
</div>
</article><!-- end article -->
</div><!-- end page -->
</div><!-- end col-mid-9 -->

